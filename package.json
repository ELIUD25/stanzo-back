{
  "name": "sbackend",
  "version": "1.0.0",
  "description": "Secure backend API server with email authentication",
  "license": "ISC",
  "author": "Your Name <your.kinyuastanzo6759@gmail.com>",
  "type": "commonjs",
  "main": "app.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "debug": "nodemon --inspect server.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "jest --watchAll --coverage",
    "test:ci": "jest --ci --coverage",
    "security-check": "npm audit --production",
    "docker:build": "docker build -t sbackend .",
    "docker:run": "docker run -p 5001:5001 sbackend",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "mongoose-paginate-v2": "^1.9.1",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "path-to-regexp": "^6.2.1",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/config/"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ]
  },
  "keywords": [
    "authentication",
    "email",
    "secure-code",
    "backend",
    "api"
  ]
}